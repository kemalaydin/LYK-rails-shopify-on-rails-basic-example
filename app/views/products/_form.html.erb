 <% if @product.errors.any? %>
  <div class="alert alert-danger">
    <div id="error_explanation">
      <h2>
        <%= pluralize(@product.errors.count, "error") %> prohibited
        this article from being saved:
      </h2>
      <ul>
        <% @product.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  </div>
  <% end %>
  

<%= form_with model: @product , multiple: true, local: true do |form| %>
<div class="col-md-6" style="float:left;">
    <h3>Product</h3>
    <div class="form-group">
        <%= form.label :name %>
        <%= form.text_field :name,class: "form-control" %>
    </div>
    <div class="form-group">
        <%= form.label :price %>
        <%= form.text_field :price, class: "form-control" %>
    </div>
    <div class="form-group">
        <%= form.label :description %>  
        <%= form.text_area :description, class: "form-control" %>
    </div>
    <div class="form-group">
        <%= form.label :image %>
        <%= form.file_field :images, :multiple => true, class: "form-control" %>
    </div>
</div>
<div class="col-md-6" style="float:left">
    <h3>Variants</h3>
    <%= form.fields_for :variants do |variants_form| %>
    <div class="form-group">
        <%= variants_form.label 'Variants Name' %>
        <%= variants_form.text_field :name,class: "form-control" %>
    </div>
    <div class="form-group">
        <%= variants_form.label :stock %>
        <%= variants_form.text_field :stock, class: "form-control" %>
    </div>
    <hr>
    <% end %>
    <div class="form-group">
        <%= form.submit nil, class: "btn btn-success", style: "float:right" %>
    </div>
</div>
<div class="clearfix"></div>
<% end %>