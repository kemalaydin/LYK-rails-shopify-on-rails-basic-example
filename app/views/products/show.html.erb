<h1> <%= @product.name %></h1>
<p>
    <%= link_to  "Back", products_path(), class: "btn btn-primary btn-sm" %>
    <%= link_to  "Edit", edit_product_path(@product), class: "btn btn-warning btn-sm" %>
</p>

<p>
    <strong> Product Name : </strong> <%= @product.name %>
</p>

<p>
    <strong> Product Price : </strong> <%= @product.price %> TL
</p>

<p>
    <strong> Product Description : </strong> <%= @product.description %>
</p>

<p>
    <strong> Product Images : </strong> 
    <% if(@product.images.attached?) %>
        <% @product.images.each do |image| %>
            <%= image_tag image, size: '200' %>
        <% end %>
    <% else %>
        <div class="alert alert-info">Image not found for this product</div>
    <% end %>
</p>
<hr>
<h2>Variants</h2>
<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Name</th>
            <th>Stock</th>
            <th>Sending Mail</th>
            <th style="width: 50px"></th>
        </tr>
    </thead>
    <tbody>
    <% if(@product.variants.any?) %>
        <%= render partial: 'variants/select_variant', locals: { product: @product }  %>
    <% end %>
    </tbody>
</table>